# GitHub Actions Workflow (Optional)
# Uncomment and customize if you want automated CI/CD

name: Test & Lint

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main ]

jobs:
  lint:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.10'
      
      - name: Install dependencies
        run: |
          pip install flake8 black
      
      - name: Lint with flake8
        run: |
          flake8 cuda_kernels/ inference/ profiling/ --count --select=E9,F63,F7,F82 --show-source --statistics
          flake8 cuda_kernels/ inference/ profiling/ --count --max-complexity=10 --max-line-length=100 --statistics
      
      - name: Check formatting with black
        run: |
          black --check cuda_kernels/ inference/ profiling/

